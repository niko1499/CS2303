//life.c -- Niko Gamarra
#include <stdio.h>
#include <stdlib.h>
#include "Life.h"
#include "Game.h"
char print, pause;
int main(int argc, char * argv[]) {
	if (argc < 5)
		printf("ERROR: Too few args.");
	//set up variables
	int x, y, gens;
	//printf(argc[0]);
	x = atoi(argv[1]);
	y = atoi(argv[2]);
	gens = atoi(argv[3]);
	if (argc > 4) {
		print = atoi(argv[5]);
		if (argv > 5) {
			pause = atoi(argv[6]);
		}
	}
	char **Old;
	unsigned int i;
	Old = malloc(x * sizeof(int *));
	if (Old)
		for (i = 0; i < x; i++) {
			Old[i] = malloc(y * sizeof(int));
			if (!Old[i])
				exit(-1);
			/* error */
			printf("Error: malloc error");
		}

	char **New;
		unsigned int i;
		New = malloc(x * sizeof(int *));
		if (New)
			for (i = 0; i < x; i++) {
				New[i] = malloc(y * sizeof(int));
				if (!New[i])
					exit(-1);
				/* error */
				printf("Error: malloc error");
			}


	FILE *input;
	input = (fopen(argv[4], "r"));
	if (!input) {
		printf("ERROR: File not found.");
	} else {

	}
	PlayGame(x, y, gens, Old, New);
}

int getPrint() {
	if (print == 'y' || print == 'Y')
		return 1;
	else {
		return 0;
	}
}
int getPause() {
	if (pause == 'y' || pause == 'Y')
		return 1;
	else {
		return 0;
	}
}
