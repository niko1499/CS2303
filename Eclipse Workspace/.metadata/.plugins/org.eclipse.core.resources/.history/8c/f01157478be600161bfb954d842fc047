//Game.c --  Niko Gamarra

#include "Life.h"

void PlayOne(int width, int height, char **Old, char **New) {
	int xScanMin, xScanMax, yScanMin, yScanMax;
	int neighbors = 0;
	for (int x = 0; x < width; x++) {
		if (x == 0) {
			xScanMin = 0;
		} else {
			xScanMin = -1;
		}
		if (x == width) {
			xScanMax = 0;
		} else {
			xScanMax = 1;
		}
		for (int y = 0; y < height; y++) {
			if (y == 0) {
				yScanMin = 0;
			} else {
				yScanMin = -1;
			}
			if (y == height) {
				yScanMax = 0;
			} else {
				yScanMax = 1;
			}
			for(int i=xScanMin;i<iScanMax;i++){
				for(int j=yScanMin;j<jScanMax;j++){
					if(Old[x+i][y+j]=="X"){
						neighbors++;
						if(Old[x][y]=="X")
							neighbors--;
					}
				}
			}
		}
	}
}

